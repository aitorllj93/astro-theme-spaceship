---
import type { Props } from "@/components/Article/utils/get-static-paths";
import Entry from "@/components/Article/Entry.astro";
import Layout from "@/components/Layout.astro";
import LeftSidebar from "@/components/LeftSidebar/LeftSidebar.astro";
import RightSidebar from "@/components/RightSidebar/RightSidebar.astro";

export type { Props };

const { author, document, navigation, page, tags, website } = Astro.props;
---

<Layout page={page} document={document}>
  <slot />
  <LeftSidebar website={website} navigation={navigation} />
  <Entry author={author} document={document} tags={tags} />
  <RightSidebar 
    document={document} 
    navigation={navigation}
    showToC={(document?.rendered?.metadata?.headings as []).length > 0}
    />
</Layout>
