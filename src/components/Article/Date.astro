---
import config from "@/config";
import type { DocumentContext } from "@/types";

export type Props = {
  document: DocumentContext;
};

const { updated } = Astro.props.document.data;
---

{
  updated && config.displayOptions?.showPublishDate !== false && (
    <span data-pagefind-weight="0" class="article-date">
      {updated.toLocaleDateString("es-ES")}
    </span>
  )
}
